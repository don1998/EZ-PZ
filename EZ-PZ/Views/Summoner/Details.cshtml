@model EZ_PZ.Models.Summoner

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Profile</h4>
    <hr />


    <div class="container">

            <div class="col-sm-4">
                    <div class="card" style="width: 70%;" align="center">
                        <div class="card-header bg-secondary">
                            <font size="5">@Html.DisplayFor(model => model.summonerName)</font>
                        </div>
                        <img class="card-img-top" src="@Html.DisplayFor(model => model.profileIcon)" />
                        <div class="card-body bg-dark">
                            <span class="badge"><font color="black">@Html.DisplayFor(model => model.summonerLevel)</font></span>
                        </div>
                        <div class="card-footer bg-secondary">
                            <button type="button" class="btn-danger" style="border-radius:8px;">Update</button>
                        </div>
                    </div>
            </div>
            <div class="col-sm-8">
                <div class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">Total      </a>
                            <a class="navbar-brand"href="/">Ranked Solo      </a>
                            <a class="navbar-brand" href="/">Ranked Flex      </a>
                        </div>
                     </div>
                  </div>
                <container>
                    
                </container>
            </div>
    </div>
</div>
